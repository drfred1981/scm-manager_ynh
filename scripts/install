#!/bin/bash

# Retrieve arguments
domain=$1
path=$2
user=$3


SCMMANAGERAPP="http://maven.scm-manager.org/nexus/content/repositories/releases/sonia/scm/scm-server/1.38/scm-server-1.38-app.tar.gz"
SCMMANAGERAPPFILE="scm-server-1.38-app.tar.gz"




# Check user parameter
sudo yunohost user list --json | grep -q "\"username\": \"$user\""
if [[ ! $? -eq 0 ]]; then
    echo "Wrong user"
    exit 1
fi


sudo yunohost app setting scmmanager admin_user -v $user

# Check domain/path availability
sudo yunohost app checkurl $domain$path -a scmmanager
if [[ ! $? -eq 0 ]]; then
    exit 1
fi

# Install dependencies
sudo apt-get install -y git
sudo apt-get install -y openjdk-7-jre default-jre-headless


# Copy files to the right place
final_path=/opt/yunohost/scmmanager
data_path=/home/yunohost.app/scmmanager
sudo mkdir -p $final_path
sudo mkdir -p $data_path

# Install SCM-Manager

# Copy files to the right place
sudo cp ../conf/default-scm-server /etc/default/scm-server
sudo cp ../conf/init-scm-server /etc/init.d/scm-server
# Change variables in SCM-Manager configuration
# Configure Nginx and reload
sed -i "s@PATHTOCHANGE@$path@g" ../conf/nginx.conf
sudo cp ../conf/nginx.conf /etc/nginx/conf.d/$domain.d/scmmanager.conf


wget -P /tmp $SCMMANAGERAPP 
tar xzvf /tmp/$SCMMANAGERAPPFILE
sudo mv /tmp/$SCMMANAGERAPPFILE/scm-server /opt/yunohost/scmmanager



sudo useradd -d $data_path scmserver
sudo chown scmserver:scmserver $data_path
sudo chmod 755 /home/yunohost.app
sudo find $final_path -type f | xargs sudo chmod 664
sudo find $final_path -type d | xargs sudo chmod 775
sudo chmod -R 770 $data_path


chmod +x /etc/init.d/scm-server
chown -R scmserver:scmserver /opt/scm-server/
sudo update-rc.d scm-server defaults
sudo service scm-server start

# Add scm-server service to YunoHost's monitoring
sudo yunohost service add scm-server --log /var/log/scm-server/ --status "ps aux | grep scm-server | grep -v grep"


# Reload Nginx and regenerate SSOwat conf

sudo service scm-server restart
sudo service nginx reload
sudo yunohost app ssowatconf

